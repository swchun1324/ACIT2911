<!DOCTYPE html>
<html lang="en">

{{> header}}

<body>
    {{> menu}}

    <div id="thread_container">
        <div id="op_container">
            <h1>{{heading}}</h1>
            <p class="small"><strong>Posted</strong> {{date}} by {{poster}}</p>
            <div class="color2">{{op_message}}</div>
           
            
            
            {{#if isOP}}
            <div class="padding2">
            <form method="post" action="/delete_post">
                <input type="hidden" name="id" value={{id}}>
                <div class="hi"><input type="submit" class="delete2" value="Delete"></input></div>
            </form>
            <div class="there"><button id="edit_button" onclick="show_edit_form()">Edit Post</button></div>
            </div>
            {{!-- edit form --}}
            <form method="post" action="/edit_post" id='edit_post_form'>
            <br>
                <label for="edit_textarea"><b>Edit Thread</b></label><br>
                <input type="hidden" name="id" value={{id}}>
                <textarea name="edit_textarea" rows="10" cols="50" class="edit_textarea">{{op_message}}</textarea><br>
                <input type="submit" value="Edit"></input>
            </form>
            {{/if}}
        </div>
        
        <hr>
        
        <div id="replies_container">
            {{#if isAuthenticated}}
            <form method="post" action="/add_reply">
                <input type="hidden" name="id" value={{id}}>
                <textarea name="reply" class="post_text" rows="10" cols="50" placeholder="Reply to this post!" required></textarea><br>
                <div class="button2"><input type="submit"  value="Reply"></input></div>
            </form>
            {{/if}}
            
           {{#each reply}}
                <p>{{username}} replied on {{date}}</p>
                <li>{{message}}</li>
                <hr>
            {{/each}}
        </div>
    </div>
</body>
{{> footer}}
<script src="/js/script.js"></script>
</html>