<!DOCTYPE html>
<html lang="en">

{{> header}}

<body>
    {{> menu}}

    <form method="post" action="/add_dm">
        <div class="form_container">
            <h1>{{heading}}</h1>

            <input type="hidden" name="recipient_id" value={{recipient_id}}

            <label for="message_body"><b>Message</b></label><br>
            <textarea name="message_body" rows="10" cols="50" placeholder="Send a message!"
                required></textarea>
            <br>

            <input type="submit" value="Send">
        </div>
    </form>
</body>

{{> footer}}
<script src="js/script.js"></script>

</html>